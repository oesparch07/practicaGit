<Window x:Class="JocRobot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JocRobot"
        mc:Ignorable="d"
        Title="Joc del Robot" Height="700" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="canvas"
                Grid.Row="0"
                Background="Beige">
        </Canvas>
        <TextBlock
            x:Name="txtNumMovs"
            Grid.Row="1"
            Text="N moviments: 0"
            FontSize="25"
            TextAlignment="Center"
            Padding="5"
            Background="AliceBlue"/>
        <Button Grid.Row="2" x:Name="btnInicaJoc"
                Background="AliceBlue"
                FontSize="25"
                 Click="btnInicaJoc_Click">Iniciar Joc</Button>
    </Grid>
</Window>
